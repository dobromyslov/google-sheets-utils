{
  "compilerOptions": {
    "lib": [
      "ES2020"
    ],
    "module": "ES2015",
    "target": "ES2017",
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "newLine": "lf",
    "stripInternal": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
