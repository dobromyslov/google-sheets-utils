{
  "name": "google-sheets-utils",
  "version": "0.9.9",
  "description": "Google Sheets Utils. Get rid of boilerplate code.",
  "license": "MIT",
  "repository": {
    "type": "Github",
    "url": "https://github.com/dobromyslov/google-sheets-utils"
  },
  "homepage": "\"https://github.com/dobromyslov/google-sheets-utils#readme",
  "bugs": {
    "url": "https://github.com/dobromyslov/google-sheets-utils/issues"
  },
  "author": "Viacheslav Dobromyslov <viacheslav@dobromyslov.ru>",
  "keywords": [
    "google sheets",
    "typescript",
    "nodejs",
    "utils"
  ],
  "files": [
    "dist"
  ],
  "main": "dist",
  "types": "dist",
  "sideEffects": false,
  "scripts": {
    "test": "xo && tsc --noEmit && nyc jasmine-ts",
    "release": "npm run build && np --no-2fa",
    "build": "del-cli dist && tsc"
  },
  "dependencies": {
    "google-auth-library": "^6.0.6",
    "googleapis": "^59.0.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/jasmine": "^3.5.13",
    "@types/node": "^10.17.28",
    "del-cli": "^3.0.1",
    "jasmine": "^3.6.1",
    "jasmine-ts": "^0.3.0",
    "np": "^6.4.0",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "xo": "^0.33.1"
  },
  "xo": {
    "space": true,
    "rules": {
      "import/no-unassigned-import": [
        "error",
        {
          "allow": [
            "reflect-metadata"
          ]
        }
      ]
    }
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "src/**"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcovonly",
      "text",
      "text-summary"
    ]
  }
}
